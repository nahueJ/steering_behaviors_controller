define block model
(
  size [0.5 0.5 0.5]
  gui_nose 0
)

define topurg ranger  #definicion del sensor del laser
(
  sensor( 			
    range [ 0.0  8.0 ]        #intervalo de distancias que mide
    fov 270                    #amplitud angular de la medicion en grados
    samples 270                 #cantidad de muestras
  )
  #en resumen este laser toma 3 medidas, una a -5° otra a 0° y otra a 5° (10° de amplitud) y cada haz mide distancias entre 0 y 30 "metros" (en realidad depende de la resolucion que pongas *ver linea 50)

  # generic model properties
  color "black"
  size [ 0.05 0.05 0.1 ]
)

define erratic position
(
  #size [0.415 0.392 0.25]
  size [0.35 0.35 0.25]
  origin [-0.05 0 0 0]
  gui_nose 1
  drive "diff"

  #posicion (xyx) y orientacion del emisor de laser
  
  topurg(pose [ 0.125 0.000 -0.100 0.000 ])         #este toma el nombre de laser 0
  #topurg(pose [ 0.125 0.175 -0.100 45.000 ])        #este toma el nombre de laser 1
  #topurg(pose [ 0.125 -0.175 -0.100 315.000 ])      #este toma el nombre de laser 2
)

define floorplan model
(
  # sombre, sensible, artistic
  color "gray30"

  # most maps will need a bounding box
  boundary 1

  gui_nose 0
  gui_grid 0

  gui_outline 0
  gripper_return 0
  fiducial_return 0
  #laser_return 1
)

# set the resolution of the underlying raytrace model in meters
resolution 0.01   #resolucion del mapa, influye en la percepción de los lasers

interval_sim 50  # simulation timestep in milliseconds


window
( 
  size [ 700.000 700.000 ] 

  rotate [ 0.000 0.000 ]
  scale 25.000
)

# load an environment bitmap
floorplan
( 
  name "willow"
  
  #WILLOW
  bitmap "roomba-stage.png"  #imagen del mapa!
  size [25.0 25.0 0.5]
  pose [ 0.000 0.000 0 90.000 ]     #ubicacion del mapa en el simulador
)

# throw in two robots
erratic( pose [ -10.000 -10.000 0 0.000 ] name "era" color "blue")  # posicion del robot en el mapa
